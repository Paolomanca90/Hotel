@model U4_W5_BENCHMARK.Models.Servizio

@{
    ViewBag.Title = "AddServizio";
    TempData["IdPrenotazione"] = ViewContext.RouteData.Values["Id"];
    List<string> tipologia = new List<string>
{
        "Colazione in camera",
        "Cibo e bevande dal minibar",
        "Internet",
        "Letto aggiuntivo",
        "Culla",
    };
}

<h2 class="m-0 text-danger text-decoration-underline text-center pb-3">Nuovo Servizio</h2>

@if (ViewBag.Errore != null)
{
    <div class="alert alert-danger my-3 w-25 text-center">@ViewBag.Errore</div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-8 pe-0">
                <div class="form-horizontal w-75 border border-3 border-danger rounded-3 p-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.ServizioAggiunto, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.DropDownListFor(model => model.ServizioAggiunto, new SelectList(tipologia), "- Seleziona Tipologia -", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ServizioAggiunto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.DataServizio, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.EditorFor(model => model.DataServizio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.DataServizio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.EditorFor(model => model.Quantita, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Quantita, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.PrezzoServizio, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.EditorFor(model => model.PrezzoServizio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PrezzoServizio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.Hidden("IdPrenotazione", TempData["IdPrenotazione"] as string)

                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Aggiungi" class="btn btn-danger fw-bold w-75" />
                    </div>
                </div>
                </div>
            </div>
            <div class="col-4 ps-0">
                <img src="https://ecointernazionale.com/wp-content/uploads/2021/03/shining-1.jpg" alt="cliente" class="rounded-2 w-100" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
