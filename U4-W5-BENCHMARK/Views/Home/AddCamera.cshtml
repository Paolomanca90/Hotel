@model U4_W5_BENCHMARK.Models.Camera

@{
    ViewBag.Title = "AddCamera";
}

<h2 class="m-0 text-danger text-decoration-underline text-center pb-3">Nuova Camera</h2>

@if (ViewBag.Errore != null)
{
    <div class="alert alert-danger my-3 w-25 text-center">@ViewBag.Errore</div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-8 pe-0">
                <div class="form-horizontal w-75 border border-3 border-danger rounded-3 p-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.NumeroCamera, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.EditorFor(model => model.NumeroCamera, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumeroCamera, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.Tipologia, htmlAttributes: new { @class = "control-label fs-5 text-light" })
                        <div class="d-flex justify-content-center w-100">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Tipologia)
                                @Html.ValidationMessageFor(model => model.Tipologia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="text-center">
                            <input type="submit" value="Aggiungi" class="btn btn-danger fw-bold w-75" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ps-0">
                <img src="https://filmandfurniture.com/wp-content/uploads/2019/06/the-shining-doctor-sleep-comparison-twins.jpg" alt="cliente" class="rounded-2 w-100" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
